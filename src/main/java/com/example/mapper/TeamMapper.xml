<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TeamDao">
   <select id="findAllTeam" resultType="com.example.domain.Team">
      select * from team
   </select>
   <select id="findOneTeam" resultType="com.example.domain.Team">
      select * from team where id = #{id}
   </select>
   <insert id="saveTeam" useGeneratedKeys="true" keyProperty="id">
     insert into team (name) values (#{name})
   </insert>
   <update id="updateTeam">
     update team set name = #{name} where id = #{id}
   </update>
   <delete id="deleteTeam">
     delete from team where id = #{id}
   </delete>
</mapper>